---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';

type Props = CollectionEntry<'blog'>['data'];

const { title, description, pubDate, updatedDate, heroImage, attachments } = Astro.props;
---

<html lang="es">
	<head>
		<BaseHead title={title} description={description} />
		<style>
			/* --- Estilos Globales y Variables --- */
			:root {
				--primary-color: #ff6b6b; /* Rojo escolar suave */
				--accent-color: #4a90e2;  /* Azul */
				--text-main: #2d3748;     /* Gris oscuro */
				--text-muted: #718096;
				--bg-paper: #fdfbf7;      /* Color crema papel */
			}

			body {
				background-color: var(--bg-paper);
				background-image: radial-gradient(#cbd5e0 1px, transparent 1px);
				background-size: 20px 20px;
				color: var(--text-main);
				font-family: system-ui, -apple-system, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
				margin: 0;
				overflow-x: hidden; /* Evita scrolls accidentales a nivel global */
			}

			main {
				width: 100%;
				max-width: 1050px;
				margin: 0 auto;
				padding: 2em 1em;
				box-sizing: border-box;
			}

			/* --- Contenedor del Art√≠culo --- */
			article {
				background: white;
				border-radius: 24px;
				box-shadow: 0 10px 30px rgba(0,0,0,0.05);
				overflow: hidden;
				border: 1px solid #e2e8f0;
				width: 100%;
				box-sizing: border-box;
			}

			/* Imagen de cabecera */
			.hero-image {
				width: 100%;
				height: 400px;
				overflow: hidden;
				position: relative;
				margin-bottom: 2rem;
				border-bottom: 1px solid #edf2f7;
			}
			.hero-image img {
				display: block;
				width: 100%;
				height: 100%;
				object-fit: cover;
			}

			/* Contenedor de texto (Prose) */
			.prose {
				width: 720px;
				max-width: 100%;
				margin: auto;
				padding: 1em 3em 2em 3em; 
				color: var(--text-main);
				line-height: 1.8;
				box-sizing: border-box;
				/* Mejora el manejo de palabras largas que rompen el dise√±o */
				overflow-wrap: break-word;
				word-wrap: break-word;
			}

			/* --- T√≠tulo y Metadatos --- */
			.title {
				text-align: center;
				margin-bottom: 2.5em;
				padding-bottom: 1.5em;
				border-bottom: 2px dashed #e2e8f0;
			}

			h1 {
				font-size: 2.8em;
				margin: 0.5em 0 0.3em;
				line-height: 1.2;
				color: var(--text-main);
			}

			.description {
				font-size: 1.3em;
				color: var(--text-muted);
				font-style: italic;
				margin-bottom: 1.5em;
				font-weight: 500;
			}

			.date {
				display: inline-block;
				font-size: 0.9em;
				color: var(--text-muted);
				background: #f7fafc;
				padding: 0.4em 1em;
				border-radius: 50px;
				margin-bottom: 0.5em;
			}

			/* --- Secci√≥n de Materiales (Attachments) --- */
			.material-section {
				background: #f0f9ff;
				padding: 2.5rem 2rem;
				border-radius: 20px;
				margin: 2rem 2rem 4rem 2rem; 
				border: 2px dashed #bfdbfe;
				box-sizing: border-box;
			}

			.material-header {
				display: flex;
				justify-content: space-between;
				align-items: center;
				margin-bottom: 2rem;
				flex-wrap: wrap;
				gap: 1.5rem;
			}

			.material-section h3 {
				margin: 0;
				font-size: 1.6rem;
				color: var(--accent-color);
				display: flex;
				align-items: center;
				gap: 0.5rem;
			}

			/* Grid de tarjetas: Corregido minmax para evitar desbordamiento */
			.attachments-grid {
				display: grid;
				grid-template-columns: repeat(auto-fill, minmax(min(100%, 250px), 1fr));
				gap: 1.5rem;
			}

			.attachment-card {
				background: white;
				border: 2px solid #e2e8f0;
				border-radius: 16px;
				overflow: hidden;
				transition: transform 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
				display: flex;
				flex-direction: column;
				width: 100%;
				box-sizing: border-box;
			}

			.attachment-card:hover {
				transform: translateY(-5px);
				box-shadow: 0 8px 15px rgba(74, 144, 226, 0.15);
				border-color: var(--accent-color);
			}

			.preview-container {
				height: 160px;
				background: #f8fafc;
				border-bottom: 2px solid #e2e8f0;
				position: relative;
			}
			.preview-container iframe {
				width: 100%;
				height: 100%;
				border: none;
				pointer-events: none;
				opacity: 0.9;
			}

			.card-footer {
				padding: 1rem;
				display: flex;
				flex-direction: column;
				gap: 0.8rem;
				flex-grow: 1;
				justify-content: space-between;
			}

			.text-group {
				display: flex;
				flex-direction: column;
				gap: 0.3rem;
				min-width: 0; /* Permite que los hijos respeten el truncado de texto */
			}

			.file-name {
				font-size: 1rem;
				font-weight: 700;
				color: var(--text-main);
				overflow: hidden;
				text-overflow: ellipsis;
				white-space: nowrap;
			}
			
			.file-desc {
				font-size: 0.85rem; 
				color: var(--text-muted);
				margin: 0;
				line-height: 1.4;
			}

			/* --- Botones --- */
			.btn-mini-descarga {
				text-align: center;
				background-color: #e2e8f0;
				color: var(--text-main);
				font-size: 0.9rem;
				font-weight: 600;
				padding: 0.6rem;
				border-radius: 10px;
				text-decoration: none;
				transition: all 0.2s;
				display: flex;
				align-items: center;
				justify-content: center;
				gap: 0.5rem;
			}
			.btn-mini-descarga:hover {
				background-color: var(--accent-color);
				color: white;
			}

			.btn-download-all {
				background: linear-gradient(135deg, var(--primary-color) 0%, #ff5252 100%);
				color: white;
				border: none;
				padding: 0.8em 2em;
				border-radius: 50px;
				font-family: inherit;
				font-weight: 800;
				font-size: 1.1rem;
				cursor: pointer;
				box-shadow: 0 4px 10px rgba(255, 107, 107, 0.4);
				transition: all 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
				display: flex;
				align-items: center;
				gap: 0.6rem;
				text-transform: uppercase;
				letter-spacing: 0.5px;
			}
			
			.btn-download-all:hover {
				transform: translateY(-3px) scale(1.02);
				box-shadow: 0 8px 20px rgba(255, 107, 107, 0.5);
			}

			/* Responsive */
			@media (max-width: 720px) {
				.prose {
					width: 100%;
					/* Reducimos el padding lateral para que el texto no se vea apretado */
					padding: 1.5em 1.2rem; 
				}
				.material-section {
					/* Ajustamos m√°rgenes externos para que no empujen hacia afuera */
					margin: 2rem 0.8rem; 
					padding: 1.5rem 1rem;
					border-radius: 16px;
				}
				.hero-image {
					height: 250px;
					margin-bottom: 1.5rem;
				}
				h1 {
					font-size: 1.8em; /* T√≠tulo un poco m√°s peque√±o para que quepa bien */
				}
				.description {
					font-size: 1.1em;
				}
				.material-header {
					flex-direction: column;
					align-items: stretch;
				}
				.btn-download-all {
					justify-content: center;
					font-size: 0.95rem;
					padding: 0.8em 1.2em;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<article>
				<!-- Imagen Hero -->
				<div class="hero-image">
					{heroImage && <img width={1020} height={510} src={heroImage} alt="" />}
				</div>

				<div class="prose">
					<!-- Cabecera del Texto -->
					<div class="title">
						<div class="date">
							<FormattedDate date={pubDate} />
							{updatedDate && <div class="last-updated-on"> (Actualizado el <FormattedDate date={updatedDate} />)</div>}
						</div>
						<h1>{title}</h1>
						{description && <p class="description">{description}</p>}
					</div>

					<!-- Contenido Markdown -->
					<div class="content-body">
						<slot />
					</div>
				</div>

				<!-- Secci√≥n de Archivos Adjuntos -->
				{attachments && attachments.length > 0 && (
					<div class="material-section">
						<div class="material-header">
							<h3>
								<span style="font-size: 1.4em;">üìö</span> Material de Clase
							</h3>
							<button id="download-all-btn" class="btn-download-all">
								‚¨á Descargar todo
							</button>
						</div>

						<div class="attachments-grid">
							{attachments.map((item) => (
								<div class="attachment-card">
									<div class="preview-container">
										<iframe src={item.file} title={item.name} loading="lazy"></iframe>
									</div>
									<div class="card-footer">
										<div class="text-group"> 
											<span class="file-name" title={item.name}>{item.name}</span>
											{item.description && (
												<p class="file-desc">{item.description}</p>
											)}
										</div>
										
										<a href={item.file} download class="btn-mini-descarga file-download-link">
											‚¨á Descargar
										</a>
									</div>
								</div>
							))}
						</div>
					</div>
				)}
			</article>
		</main>
		<Footer />

		<script>
			const btn = document.getElementById('download-all-btn');
			if (btn) {
				btn.addEventListener('click', () => {
					const links = document.querySelectorAll('.file-download-link');
					links.forEach((link, index) => {
						setTimeout(() => {
							(link as HTMLElement).click();
						}, index * 500);
					});
				});
			}
		</script>
	</body>
</html>